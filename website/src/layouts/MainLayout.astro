---
import "@fontsource/ubuntu-mono";
import "@fontsource-variable/montserrat";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Manualify</title>
  </head>
  <body>
    <slot />
  </body>

  <style is:global>
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: inherit;
      min-width: 0;
    }

    html {
      /* scrollbar-gutter: stable both-edges; */
    }

    :root {
      --clr-bg: #2c2c2c;
      --clr-text: white;
      --clr-text-dark: #b3b3b3;
      --clr-neutral-500: #909090;
      --clr-neutral-400: #494949;
      --clr-neutral-300: #232323;
      --clr-neutral-200: #151416;
      --clr-green-400: #3fa56a;
      --clr-red-400: #ee6352;
      --clr-yellow-400: #ffb100;
    }
    body {
      background-color: var(--clr-bg);
      font-family: "Montserrat Variable", sans-serif;
      min-height: 100svh;
      display: flex;
      gap: 4rem;
      flex-direction: column;
      align-items: center;
    }

    h2 {
      color: var(--clr-text);
    }

    button {
      cursor: pointer;
      background-color: transparent;
      border: none;
    }

    input {
      border: none;
      outline: none;
    }

    ul {
      list-style: none;
    }
  </style>
</html>
